  padding: 25px 0;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width:128rpx;
  height:128rpx;
}

.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}

