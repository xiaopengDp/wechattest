/* pages/rank/rank.wxss */
.prize_view{
  width: 100%;
  text-align: center;
  font-size: 20px;
  line-height: 40px;
}
.rank_item{
  width:98%;
  border-bottom:solid #DDD 1px;
  margin:5px auto;
  height:50px;
  text-align:center;
  line-height:50px;

}
.rank_item::after{
  content: "";
  display: table;
  height: 0;
  clear: both;
}

.rank_item .rank_no{
  float:left;
  margin-left: 10rpx;
  width: 20px;
}
.rank_item .rank_head{
  width: 48px;
  height: 48px;
  float:left;
  margin-left: 20rpx;
}
.rank_item .rank_nickname{
  float:left;
  margin-left: 20rpx;
}
.rank_item .rank_run{
  float:right;
  margin-right: 20rpx;
}

